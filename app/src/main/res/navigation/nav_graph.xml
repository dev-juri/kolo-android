<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/loginFragment">

    <action
        android:id="@+id/action_global_loginFragment"
        app:destination="@id/loginFragment" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.juri.kolo_android.presentation.fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_loginFragment_to_exploreFragment"
            app:destination="@id/exploreFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.juri.kolo_android.presentation.fragments.SignupFragment"
        android:label="SignupFragment">
        <action
            android:id="@+id/action_signupFragment_to_exploreFragment"
            app:destination="@id/exploreFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.juri.kolo_android.presentation.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_withdrawFragment"
            app:destination="@id/withdrawFragment">
            <argument
                android:name="familyId"
                app:argType="integer" />
        </action>
        <action
            android:id="@+id/action_homeFragment_to_depositFragment"
            app:destination="@id/depositFragment"
            app:popUpTo="@id/homeFragment">
            <argument
                android:name="familyId"
                app:argType="integer" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/withdrawFragment"
        android:name="com.juri.kolo_android.presentation.fragments.WithdrawFragment"
        android:label="WithdrawFragment">
        <argument
            android:name="familyId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/depositFragment"
        android:name="com.juri.kolo_android.presentation.fragments.DepositFragment"
        android:label="DepositFragment">
        <action
            android:id="@+id/action_depositFragment_to_checkoutFragment"
            app:destination="@id/checkoutFragment"
            app:popUpTo="@id/depositFragment"
            app:popUpToInclusive="true">
            <argument
                android:name="authUrl"
                app:argType="string" />
        </action>
        <argument
            android:name="familyId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/checkoutFragment"
        android:name="com.juri.kolo_android.presentation.fragments.CheckoutFragment"
        android:label="CheckoutFragment">
        <argument
            android:name="authUrl"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/createFamilyFragment"
        android:name="com.juri.kolo_android.presentation.fragments.CreateFamilyFragment"
        android:label="fragment_create_family"
        tools:layout="@layout/fragment_create_family">
        <action
            android:id="@+id/action_createFamilyFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/joinFamilyFragment"
        android:name="com.juri.kolo_android.presentation.fragments.JoinFamilyFragment"
        android:label="JoinFamilyFragment">
        <action
            android:id="@+id/action_joinFamilyFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/exploreFragment"
        android:name="com.juri.kolo_android.presentation.fragments.ExploreFragment"
        android:label="ExploreFragment">
        <action
            android:id="@+id/action_exploreFragment_to_createFamilyFragment"
            app:destination="@id/createFamilyFragment" />
        <action
            android:id="@+id/action_exploreFragment_to_joinFamilyFragment"
            app:destination="@id/joinFamilyFragment" />
    </fragment>
</navigation>