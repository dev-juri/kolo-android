<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.juri.kolo_android.presentation.fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.juri.kolo_android.presentation.fragments.SignupFragment"
        android:label="SignupFragment" >
        <action
            android:id="@+id/action_signupFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.juri.kolo_android.presentation.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_withdrawFragment"
            app:destination="@id/withdrawFragment" />
        <action
            android:id="@+id/action_homeFragment_to_depositFragment"
            app:destination="@id/depositFragment"
            app:popUpTo="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/withdrawFragment"
        android:name="com.juri.kolo_android.presentation.fragments.WithdrawFragment"
        android:label="WithdrawFragment" />
    <fragment
        android:id="@+id/depositFragment"
        android:name="com.juri.kolo_android.presentation.fragments.DepositFragment"
        android:label="DepositFragment" >
        <action
            android:id="@+id/action_depositFragment_to_checkoutFragment"
            app:destination="@id/checkoutFragment"
            app:popUpTo="@id/depositFragment"
            app:popUpToInclusive="true">
            <argument
                android:name="authUrl"
                app:argType="string" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/checkoutFragment"
        android:name="com.juri.kolo_android.presentation.fragments.CheckoutFragment"
        android:label="CheckoutFragment" >
        <argument
            android:name="authUrl"
            app:argType="string" />
    </fragment>
</navigation>